.NoticeModal
    position absolute
    width 100%
    font-size 1rem

+prefix-classes("NoticeModal")
    .__Mask
        background-color rgba(0,0,0,0.76)
        position fixed
        top 0
        left 0
        height 100vh
        width 100vw
        z-index 8

    .__Box
        background-color rgba(255,255,255,1)
        position fixed
        margin -57px 0 0 -155px
        width 310px
        padding 20px 15px
        left 50%
        top 50%
        text-align center
        z-index 9

    .__Text
        margin-bottom 12px
        line-height 1.5rem

        a
            color rgb(51,51,51)
            text-decoration underline

    .__Btn
        background-color rgba(50,99,163,1)
        border none
        color rgb(255,255,255)
        cursor pointer
        padding 5px 7px

        &--secondary
            @extend .NoticeModal__Btn
            background-color rgba(153,153,153,1)
